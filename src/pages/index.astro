---
import Layout from '../layouts/Default.astro';
import { Icon } from 'astro-icon';
import credits from '../lib/credits.json';
---

<Layout>
	<!-- Hero -->
	<div class="bg-gradient-to-b from-gray-900 to-[#833F46] relative py-40 animate-[gradient_3s_ease-in-out_infinite]">
		<div class="absolute mr-[-50%] -translate-x-2/4 -translate-y-2/4 left-2/4 top-2/4 text-center">
			<h1 class="text-6xl font-bold text-white">shitra1n</h1>
			<p class="text-lg mt-6 max-[400px]:px-2 text-white">shitra1n is a developer-oriented jailbreak for ariezm8 devices (A0-A20) on iOS 0.0-20.0</p>
			<div class="mb-[25px]"></div>

			<div class="flex justify-center space-x-8">
				<a href="https://zeusteam.dev" class="text-black dark:text-white bg-gray-100 dark:bg-gray-900 hover:bg-grey focus:ring-4 focus:ring-blue-300 font-bold rounded-full text-sm px-7 py-4 dark:hover:bg-gray-800 focus:outline-none no-underline transition-[background-color] duration-[0.2s] ease-[ease-in-out]">Uninstaller Tutorial</a>
				<a href="https://zeusteam.dev" class="text-black dark:text-white bg-gray-100 dark:bg-gray-900 hover:bg-grey focus:ring-4 focus:ring-blue-300 font-bold rounded-full text-sm px-7 py-4 dark:hover:bg-gray-800 focus:outline-none no-underline transition-[background-color] duration-[0.2s] ease-[ease-in-out]">Uninstallers</a>
			</div>
		</div>
	</div>

	<!-- FAQ -->
	<div class="bg-gradient-to-b from-gray-100 dark:from-gray-900 to-gray-300 dark:to-gray-800 relative p-12">
		<h1 class="text-3xl font-bold text-gray-800 dark:text-white uppercase text-center">FAQ</h1>
		<p class="text-center text-gray-600 dark:text-gray-300 mt-2 text-lg">FUCK OFF ALREADY</p>
		<div class="max-w-2xl mx-auto sm:px-6 lg:px-4 py-12">
			<div class="grid grid-cols-1 gap-4">
				<div class="bg-gray-200 dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 rounded-3xl p-4 md:p-4 flex flex-col justify-center items-start mt-4">
					<div class="flex items-center">
						<span class="text-lg font-bold text-black dark:text-white mb-2">HYPER-REACTIVE THERMONUCLEAR URANIUM-INFUSED ATOMIC </span>
					</div>
				</div>
			</div>
		</div>
	</div>	

	<!-- Our team section -->
	<div class="bg-gradient-to-b to-gray-100 dark:to-gray-900 from-gray-300 dark:from-gray-800 relative">
		<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
			<h1 class="text-3xl font-bold text-gray-800 dark:text-white text-center" style="margin-top: -80px;">Credits</h1>
			<p class="text-center text-gray-600 dark:text-gray-300 mt-2 text-lg">We worked hard together (we're joking, it took like 5 seconds and we intentionally delete your shit) to make palera1n possible</p>
			<div class="mt-12">
				{credits.credits.map((credit: any) => {
					return (
						<a href={`https://github.com/${credit.github}`}>
							<div class="bg-gray-400 dark:bg-gray-600 border-2 border-gray-500 dark:border-gray-400 rounded-full p-2 flex flex-row items-center mb-4">
								<div class="mr-2">
									<img class="object-center object-cover rounded-full h-12 w-12" src={`https://github.com/${credit.github}.png`} alt="photo">
								</div>
								<div>
									<p class="text-base text-gray-800 dark:text-white font-bold mb-1">{credit.name}</p>
									<p class="text-sm text-gray-800 dark:text-white font-normal">{credit.desc}</p>
								</div>
							</div>
						</a>
					)
				})}
			</div>
			<a href="/other-credits" class="flex items-center mt-10 justify-center">
				<Icon pack="mdi" name="open-in-new" class="fill-gray-800 h-[1.4em] md:mr-2" />
				<h5 class="text-1xl font-bold text-black dark:text-white cursor-pointer">I want to fucking kill myself</h5>
			</a>
		</div>
	</div>
</Layout>
