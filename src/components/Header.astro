---
import { MAIN_SOURCE_CODE, MAIN_TWITTE_LINK, MAIN_MASTOD_LINK, MAIN_DISCOR_LINK, MAIN_DONATE_LINK } from "../scripts/constants";
import "./pagestyle.css";
---

<style>
    .header-container {
        position: relative;
        color: #fff;
        background-color: #18181a;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 56px;
        z-index: 1;
    }

    .header-content {
        padding: 0 1.5rem;
        width: 1200px;
        height: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .tabs {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .tab {
        padding: 10px 20px;
        cursor: pointer;
        text-decoration: none;
        color: #bdbdbd;
        border-bottom: 2px solid transparent;
        transition: border-bottom 0.3s;
    }

    .tab:hover {
        color: #fff;
    }

    .tab.active {
        font-weight: 500;
        color: #fff;
        border-bottom: 2px solid #8ad1d1;
    }

    .header-dl-button {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hamburger {
        display: none;
        flex-direction: column;
        cursor: pointer;
    }

    .hamburger div {
        width: 25px;
        height: 1px;
        background-color: #c5c5c5;
        margin: 4px 0;
        transition: 0.4s;
    }

    .responsive-menu {
        display: none;
        flex-direction: column;
        background-color: #18181a;
        width: 100%;
        position: absolute;
        top: 56px;
        left: 0;
        box-shadow: #18181a 10px 10px 10px;
    }

    .responsive-menu .tab {
        padding: 15px;
        border-bottom: 1px solid #333;
    }

    @media screen and (max-width: 800px) {
        .header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .tabs {
            display: none;
        }

        .hamburger {
            display: flex;
        }

        .header-dl-button {
            display: none;
        }
    }

    .show {
        display: flex !important;
    }
</style>

<div>
    <div class="header-container">
        <div class="header-content">
            <div class="tabs">
                <a href="/" class="tab" data-path="/">/</a>
                <a href="/about" class="tab" data-path="/about">credits</a>
                <a href="https://docs.website-msw.pages.dev/" target="_blank" class="tab">docs</a>
                <a href={MAIN_TWITTE_LINK} target="_blank" class="tab">twitter</a>
                <a href={MAIN_SOURCE_CODE} target="_blank" class="tab">github</a>
                <a href="/more" class="tab" data-path="/more">more</a>
            </div>
            <div class="hamburger" id="hamburger">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <div class="responsive-menu" id="responsive-menu">
                <a href="/" class="tab" data-path="/">home</a>
                <a href="/about" class="tab" data-path="/about">credits</a>
                <a href="https://docs.website-msw.pages.dev/" target="_blank" class="tab">docs</a>
                <a href={MAIN_TWITTE_LINK} target="_blank" class="tab">twitter</a>
                <a href={MAIN_SOURCE_CODE} target="_blank" class="tab">github</a>
                <a href="/more" class="tab" data-path="/more">more</a>
                <a href="/download" style="color: aqua;" class="tab" data-path="/download">download ‚Üê</a>
            </div>
        </div>
    </div>
</div>

<script>
    const currentPath = window.location.pathname;
    const tabs = document.querySelectorAll('.tab');
    
    tabs.forEach(tab => {
        const tabPath = tab.getAttribute('data-path');
        
        if (tabPath === '/' && currentPath === '/') {
            tab.classList.add('active');
        } else if (tabPath !== '/' && currentPath.startsWith(tabPath)) {
            tab.classList.add('active');
        }
    });

    const hamburger = document.getElementById('hamburger');
    const responsiveMenu = document.getElementById('responsive-menu');
    
    hamburger.addEventListener('click', () => {
        responsiveMenu.classList.toggle('show');
    });
</script>
